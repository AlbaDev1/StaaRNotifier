{
  "manifest_version": 3,
  "name": "StaaR Notifier",
  "description": "Notifications de la cha√Æne Twitch et Youtube de StaaR",
  "version": "2.0",
  "permissions": [
    "alarms",
    "storage",
    "notifications"
  ],
  "host_permissions": [
    "https://id.twitch.tv/*",
    "https://api.twitch.tv/*"
  ],
  "icons": {
    "48": "images/logos/staar48.png",
    "128": "images/logos/staar128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "48": "images/logos/staar48.png",
      "128": "images/logos/staar128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["index.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["index.html"],
      "matches": ["<all_urls>"]
    },
    {
      "resources": ["style.css"],
      "matches": ["<all_urls>"]
    }
  ]
}